{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 200,
  "height": 260,
  "data": { "url": "https://versted.github.io/FIT3179A2/DeathsIndiv.csv"},
  "title": "Road Deaths Based on Day of the Week and Time of Day",
  "width": {"step": 12},
  "mark": "bar",
  "encoding": {
    "column": {"timeUnit":"day", "field": "Dayweek", "spacing": 25, "type": "ordinal" , "title":null
    },
    "y": {
      "aggregate": "count", "field": "",
      "title": "Number of Deaths",
      "axis": {"grid": false}
    },
    "x": {
      "field": "Time of day",
      "axis": {"title": ""}
    },
    "color": {
      "field": "Time of day",
      "scale": {"range": ["#675193", "#ca8861"]}
    }
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"domainWidth": 1}
  }
}

